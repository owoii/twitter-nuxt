// User Schema

model User {
  id           String  @id @default(cuid()) @map("_id")
  email        String
  name         String?
  username     String  @unique
  password     String
  profileImage String?

  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  // 刷新令牌
  refreshToken RefreshToken[]
  // 推文
  tweet        Tweet[]
  mediaFiles   MediaFile[]
}
